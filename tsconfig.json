{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // ou "Node16", "Node20", "ESNext"
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
}
